<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bendrect"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/regcardone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/reglinear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/user_id"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_action_name"
                android:hint="User name"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/mob_id"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/email"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:paddingBottom="5dp"
                android:paddingEnd="15dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:singleLine="true" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/pswd_id"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_action_lock"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/conpswd_id"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_action_lock"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:singleLine="true" />

</android.support.design.widget.TextInputLayout>

            <EditText
                android:id="@+id/adr_edt_id"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/messagetext"
                android:hint="Enter Address"
                android:inputType="textMultiLine"
                android:paddingEnd="10dp"
                android:paddingStart="15dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Choose Delivery"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp">

                <CheckBox
                    android:id="@+id/allchk"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:text="All"/>

                <CheckBox
                    android:id="@+id/monchk"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="83dp"
                    android:text="MON"
                     />

                <CheckBox
                    android:id="@+id/tuechk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="100dp"
                    android:text="TUE"
                    />

                <CheckBox
                    android:id="@+id/wedchk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="15dp"
                    android:text="WED"
                     />

                <CheckBox
                    android:id="@+id/thuchk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:text="THU"
                     />

                <CheckBox
                    android:id="@+id/frichk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="83dp"
                    android:text="FRI"       />

                <CheckBox
                    android:id="@+id/satchk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="100dp"
                    android:text="SAT"              />

                <CheckBox
                    android:id="@+id/sunchk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:text="SUN"    />

                <TextView
                    android:id="@+id/qtytv"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="50dp"
                    android:text="Select Quantity/day"
                    android:textColor="#000000"
                    android:textStyle="bold"
                     />



                <Spinner
                    android:id="@+id/qtyspinner"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:prompt="@string/spinner_title"
                    android:layout_toRightOf="@+id/qtytv" />

            </RelativeLayout>

            <Button
                android:id="@+id/regbtn"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="#57acd1"
                android:text="register"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/reglogbtn"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:background="@drawable/linedraw"
            android:text="Log in"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
    </RelativeLayout>
</LinearLayout>