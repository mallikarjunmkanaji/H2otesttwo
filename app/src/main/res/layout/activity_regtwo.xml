<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegtwoActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bendrect"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="131dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/adr_edt_id"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/messagetext"
                android:hint="Enter Address"
                android:inputType="textMultiLine"
                android:paddingEnd="10dp"
                android:paddingStart="15dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Choose Delivery"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp">

                <CheckBox
                    android:id="@+id/allchk"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:text="All"/>

                <CheckBox
                    android:id="@+id/monchk"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="83dp"
                    android:text="MON"
                    />

                <CheckBox
                    android:id="@+id/tuechk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="100dp"
                    android:text="TUE"
                    />

                <CheckBox
                    android:id="@+id/wedchk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="15dp"
                    android:text="WED"
                    />

                <CheckBox
                    android:id="@+id/thuchk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:text="THU"
                    />

                <CheckBox
                    android:id="@+id/frichk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="83dp"
                    android:text="FRI"       />

                <CheckBox
                    android:id="@+id/satchk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="100dp"
                    android:text="SAT"              />

                <CheckBox
                    android:id="@+id/sunchk"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:text="SUN" />

                <TextView
                    android:id="@+id/qtytv"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="50dp"
                    android:text="Select Quantity/day"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />


                <Button
                    android:id="@+id/regminus_id"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/qtytv"
                    android:background="@color/colorPrimary"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/reg_qty_no_id"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/regminus_id"/>

                <Button
                    android:id="@+id/regplus_id"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/reg_qty_no_id"
                    android:background="@color/colorPrimary"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"/>


              <!--  <Spinner
                    android:id="@+id/qtyspinner"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:prompt="@string/spinner_title"
                    android:layout_toRightOf="@+id/qtytv" /> -->

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp">


                <Button
                    android:id="@+id/regbtnid"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:background="#57acd1"
                    android:text="Register"
                    android:textColor="#FFFFFF"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>